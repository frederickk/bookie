{#
  Creates an input button.
 #}
{% macro button(id='', i18nId='', classNames='') %}
  <input id="{{ id }}" name="{{ id }}" type="button" class="form__input form__button {{ classNames -}}" data-localize="__MSG_{{ i18nId }}_" value="{{ i18nId }}">
{% endmacro %}

{#
  Creates a text input button.
 #}
{% macro button_text(id='', i18nId='') %}
  {{ button(id, i18nId, 'button--text') }}
{% endmacro %}

{#
 Creates text input for modal.
#}
{% macro modal_item(id='', placeholder='', label='') %}
  <div class="modal__item">
    <input id="{{ id }}" name="{{ id }}" type="text" class="form__input form__text form__text--filled" placeholder="{{ placeholder }}">
    {# <label for="{{ id }}">{{ label }}</label> #}
  </div>
{% endmacro %}

{#
  Creates the container for markdown and HTML render.
 #}
{% macro markdown_container(placeholder='') %}
  <div class="notes__content-container" data-bookmark-id="">
    <div class="notes__content notes__content--html notes__content--hidden">
      <span class="notes__content-placeholder">&nbsp;</span>
    </div>
    <textarea class="notes__content notes__content--markdown notes__content--hidden" placeholder="{{ placeholder }}">
{{ caller() }}
    </textarea>
  </div>
{% endmacro %}


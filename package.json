{
  "name": "bookie",
  "version": "0.1.0",
  "description": "Bookie is a Chrome Extension that makes a curated set of bookmarks accessible within the Chrome menubar.",
  "main": "menu.html",
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently \"NODE_ENV=development node_modules/.bin/webpack --watch\" \"webpack-dev-server --host 0.0.0.0 --port 1112\"",
    "build": "NODE_ENV=production node_modules/.bin/webpack && npm run package",
    "build:chrome": "NODE_ENV=production node_modules/.bin/webpack && npm run package:chrome",
    "build:firefox": "NODE_ENV=production node_modules/.bin/webpack && npm run package:firefox",
    "package": "./package.sh bookie all",
    "package:chrome": "./package.sh bookie chrome",
    "package:firefox": "./package.sh bookie firefox",
    "publish": "NODE_ENV=production npm run package && node ./chrome-upload.js",
    "push": "git push origin master"
  },
  "author": "Ken Frederick <frederickk@google.com>",
  "license": "None",
  "devDependencies": {
    "autoprefixer": "^9.6.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "chrome-webstore-upload": "^0.2.2",
    "concurrently": "^3.6.1",
    "css-loader": "^1.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "highlight.js": "^9.16.2",
    "markdown-it": "^10.0.0",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-ins": "^3.0.0",
    "markdown-it-mark": "^3.0.0",
    "markdown-it-sub": "^1.0.0",
    "markdown-it-sup": "^1.0.0",
    "node-sass": "^4.12.0",
    "normalize-url": "^3.3.0",
    "postcss": "^7.0.17",
    "postcss-loader": "^2.1.6",
    "sass-loader": "^7.1.0",
    "uglifyjs-webpack-plugin": "^1.3.0",
    "url-loader": "^1.1.2",
    "validator": "^10.4.0",
    "webextension-polyfill": "^0.2.1",
    "webpack": "^3.12.0",
    "webpack-dev-server": "^2.11.5"
  },
  "dependencies": {
    "file-loader": "^1.1.11"
  }
}
